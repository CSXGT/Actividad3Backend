<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categorias</title>
</head>
<body>
    <h1>Categorias</h1>
        <table>
            <tr>
                <th ><h3>ID_CATEGORIA</h3></th>
                <th ><h3>MODALIDAD_ID</h3></th>
                <th ><h3>NOMBRE</h3></th>
                 </tr>
            <% categorias.forEach(r => { %>
                <tr>
                    <td><%= r.ID_CATEGORIA  %></td>
                    <td><%= r.MODALIDAD_ID  %></td>
                    <td><%= r.NOMBRE  %></td>
                </tr>
            <% }) %>
        </table>

</body>
</html>